<Window x:Class="WpfRecon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRecon"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1080">
    <Grid>
        <Grid  Background="#FF292626"   >
            <Grid.RowDefinitions>
                <RowDefinition Height="166*"/>
                <RowDefinition Height="147*"/>
                <RowDefinition Height="194*"/>
                <RowDefinition Height="15*"/>
                <RowDefinition Height="104*"/>
                <RowDefinition Height="144*"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="InfoPanel" HorizontalAlignment="Center" Height="180" TextWrapping="WrapWithOverflow" VerticalAlignment="Bottom" Width="641.667" FontSize="21" Foreground="#FFF7EFEF" Text="This is Recon, a network scanner to see what devices are connected &quot;your&quot;  network.   To use this tool, add your IP Address in the textbox above and await the results, Simple.  This tool is not to be used for any illiegal activities and the user takes full responcibilities for thier own actions." Margin="235.167,0,196.499,100.486" Grid.Row="2" Grid.RowSpan="3" />
            <ProgressBar Height="19" Margin="235.167,44.78,234.166,0" VerticalAlignment="Top" BorderBrush="#6637FF0A" Background="#FF4BC114" Grid.Row="4" ValueChanged="ProgressBar_ValueChanged"/>
            <TextBlock  Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top" Height="15.96" Margin="512.022,0,512.021,0"/>
            <TextBlock x:Name="firsttest" Height="140" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22"  Grid.Row="4" Foreground="#FF4BC114"  x:FieldModifier="public" Margin="197.835,93.266,177.832,0" Grid.RowSpan="2"/>
            <TextBox x:Name="IpAddress" HorizontalAlignment="Center" VerticalAlignment="Center" Height="23.667" Width="441.667" BorderBrush="#6637FF0A"  TextChanged="TextBox_TextChanged" Margin="298.084,82.879,333.582,40.581" x:FieldModifier="public" Grid.Row="1" Background="#FF9D9999" MaxLength="15" MaxLines="1" ToolTip="IP Address"/>
            <Button x:Name="Scan" HorizontalAlignment="Center" Height="43.667" VerticalAlignment="Center" Width="68.333" BorderBrush="{x:Null}" BorderThickness="0,0,0,0"   Click="Scan_Click"  Margin="770.834,62.879,234.166,40.581" Grid.Row="1" Background="#FFA4A0A0" Content="Scan"/>
            <Image  Height="200" Margin="368.933,10,420.93,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="200">
                <Image.OpacityMask>
                    <ImageBrush ImageSource="white rabbit.png" Stretch="Uniform"/>
                </Image.OpacityMask>
            </Image>
            <Menu HorizontalAlignment="Left" Height="450.398" VerticalAlignment="Top" Width="150.667" Grid.RowSpan="4" Background="#FF292626" Grid.Row="1">
                <MenuItem x:Name="Results" Header="Results" Height="72" Width="140.667" Foreground="#FFF7EFEF" FontSize="18"/>
                <MenuItem x:Name="About" Header="About" Height="72" Width="140.667" Foreground="#FFF7EFEF" FontSize="18"/>
            </Menu>
        </Grid>

    </Grid>
</Window>
    
  
