<Page x:Class="WpfRecon.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:gif="http://wpfanimatedgif.codeplex.com" 
      xmlns:local="clr-namespace:WpfRecon"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1080"
      Title="About">

    <Grid  Background="#FF292626" Margin="0,10,0.333,-10.333"   >
        <Image gif:ImageBehavior.AnimatedSource="..\Assets\BackGround.gif" x:Name="Gif" Margin="0,0,-36.333,10" Grid.RowSpan="6" Source="..\Assets\BackGround.gif" RenderTransformOrigin="0.5,0.5" Stretch="Fill"/>


        <Menu HorizontalAlignment="Left" Height="407" VerticalAlignment="Top" Width="151" Background="{x:Null}" Margin="0,201,0,0" >
            <MenuItem x:Name="Home" Header="Home" Height="72" Width="140.667" Foreground="Aqua" FontSize="18" Click="Home_Click"/>
            <MenuItem x:Name="Results" Header="Results" Height="72" Width="141" Foreground="Aqua" FontSize="18"/>
            <MenuItem x:Name="About" Header="About" Height="72" Width="141" Foreground="Aqua" FontSize="18" Click="About_Click"/>
        </Menu>
        <TextBlock x:Name="AboutInfoPanel" HorizontalAlignment="Center" Height="575" TextWrapping="WrapWithOverflow" VerticalAlignment="Bottom" Width="642" FontSize="21" Foreground="#FFF7EFEF" Margin="247,0,190.667,106.333" OpacityMask="White" Background="#FF14424F" Opacity="0.85" ><Run Text="This is Recon, Recon has been created as part of my MSc in Applied Computer Science under the project of FDM90 for Brighton University."/><LineBreak/><Run/><LineBreak/><Run Text="Please note the disclaimer following my ethics and good standards"/><Run Text=":"/><LineBreak/><Run/><Run/><LineBreak/><Run Text="This tool is not to be used for any illegal activities and the user takes full responsibilities for their own actions.  "/><LineBreak/><Run/><LineBreak/><Run Text="To use Recon simply add the IP Address of the target you wish to scan and await for the feedback in the output panel.  The progress bar will inform you that the scan is still ongoing and the output panel will inform you when complete."/><LineBreak/><Run/><LineBreak/><Run Text="If the target is online a full enumeration scan will take place and will display the output on the results page. "/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run Text="Author Patrick Wake"/></TextBlock>
        <Image  Height="54" Margin="751,10,-104.333,0"  VerticalAlignment="Top" Source="/WpfRecon;component/Assets/hacker-logo-color.png">
            <Image.OpacityMask>
                <ImageBrush ImageSource="/WpfRecon;component/Assets/hacker-logo-color.png" Stretch="Uniform"/>
            </Image.OpacityMask>
        </Image>

    </Grid>

</Page>
